<h1 class="text-center mt-4">Categories</h1>


<div class="container">
  <div class="row justify-content-md-center">
      <% category = Category.where(id: 1).first %>
      <div class="col-2 mt-3">
        <div class="card shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.name, category_path(category), class: "text-success" %></h5>
            <% if logged_in? %>
              <p class="card-text">Habits: <%= Habit.where(category_id: category.id,user_id: current_user.id).count %></p>
            <% end %>  
            <% if logged_in? && current_user.admin? %>
              <%= link_to "View", category_path(category), class: "btn btn-outline-success btn-block" %> 
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-outline-info btn-block" %>        
            <% end %>
          </div>
          <%= image_tag("travel1.jpeg", alt: "Image", class: "card-img-right") %>
        </div>
      </div>
