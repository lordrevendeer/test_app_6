<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<div class="row justify-content-md-center">
<%= link_to "Edit category", edit_category_path(@category), class: "btn btn-outline-success" %>
</div>

<% @habits = Habit.where(category_id: @category.id) %>
<% @habits = @habits.paginate(:page => 1, :per_page => 5) %>
<div class="flickr_pagination">
    <%= will_paginate @habits, :container => false %>
</div>

<%= render 'habits/habit' %>

<div class="flickr_pagination mb-4">
    <%= will_paginate @habits, :container => false %>
</div>

